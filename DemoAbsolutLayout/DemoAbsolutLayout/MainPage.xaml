<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DemoAbsolutLayout"
             x:Class="DemoAbsolutLayout.MainPage">

    <AbsoluteLayout>
        <Button Text="Caja 1"
                Background="Green"
                AbsoluteLayout.LayoutBounds="50, 50, 200, 300">
        </Button>
        <Button Text="Caja 2"
                Background="Orange"
                AbsoluteLayout.LayoutBounds="100, 100, 250, 250">
        </Button> 
        <Button Text="Porcentual"
                Background="Brown"
                AbsoluteLayout.LayoutBounds=".5, .8, .6, .4"
                AbsoluteLayout.LayoutFlags="All">
        </Button>
        <Button Text="Ancho proporcional"
                Background="Yellow"
                AbsoluteLayout.LayoutBounds="150, 200, .4, 80"
                AbsoluteLayout.LayoutFlags="WidthProportional">
        </Button>
        <Button Text="Alto proporcional"
                Background="Red"
                AbsoluteLayout.LayoutBounds="300, 300, 80, .4"
                AbsoluteLayout.LayoutFlags="HeightProportional">
        </Button>
    </AbsoluteLayout>
</ContentPage>
